@page "/login"
@layout EmptyLayout

<div class="login-div" style="z-index:-10">
    <div class="h-100 w-100 position-relative" style="background-color: rgba(0,0,0,0.8)">


        <div class="text-white text-center p-5 pt-4 d-flex flex-column" style="border: 1px solid white; border-radius: 2%; width: 33%; position:absolute; left: 35%; top: 10vh; background-color: rgba(0,0,0,0.8)">
            <h1><a class="text-decoration-none text-white" href="/">Let's Batter</a></h1>
            <div class="text-start px-4 pt-3" style="color:white">
                <h1 style="color:white;">Sign In</h1>
                <form class="">
                    <div class="d-flex flex-column my-4">
                        <label>Email or phone number</label>
                        <input class="form-control" type="text" />
                    </div>
                    <div class="d-flex flex-column">
                        <label>Password</label>
                        <input class="form-control" type="password" />
                    </div>
                    <button href="listings" class="w-100 my-4 text-light" style="background-color: black; border: 1px solid white; border-radius: 2px; height: 2.5em;" >Submit</button>
                </form>
                <p>By continuing, you agree to LetsBatter's <a href="#">Conditions of Use</a> and <a href="#">Privacy Notice</a>.</p>
                <div class="d-flex align-items-center gap-2">
                    <i class="fa-solid fa-caret-right"></i>
                    <a class="text-decoration-none" href="#">Need Help?</a>
                </div>
            </div>

            <div class="d-flex flex-row justify-content-around align-items-center my-4">
                <div class="bg-light" style="height:1px; width: 33%" ></div>
                <p class="m-0">New to LetsBatter?</p>
                <div class="bg-light" style="height:1px; width: 33%"></div>
            </div>
            <a href="register" class="text-white my-2" style="background-color: black; border: 1px solid white; border-radius: 2px; height: 2.6em;">Create a LetsBatter account</a>
        </div>


    </div>
</div>
