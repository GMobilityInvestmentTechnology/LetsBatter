@page "/admin/mailbox"
@layout AdminLayout
<div class="my-5 d-flex h-100 gap-2">
    <div class="w-25 h-100" style="">
        <div class="col-12 border-silver p-1 d-flex justify-content-between">
            <div class="d-flex gap-3">
                <a class="text-decoration-none" href="">Focused</a>
                <a class="text-decoration-none" href="">Starred</a>
            </div>
            <a class="d-flex align-items-center text-decoration-none"><i class="fa fa-filter"></i>Filter</a>
        </div>
        <div class="col-12 px-2 py-3 border-silver">
            <div class="w-100 gap-2 d-flex align-items-center">
                <div class="fs-4 fw-bolder bg-success text-white d-flex justify-content-center align-items-center" style="border-radius: 100%; width: 1.7em; height: 1.5em">
                    GF
                </div>
                <div class="d-flex w-100 flex-column" style="line-height: 1em">
                    <label class="fw-bold">Greg Forrest</label>
                    <div class="d-flex justify-content-between" style="width: 100%">
                        <label>Request For Quot..</label>
                        <label class="fw-bold">Tue 19:27</label>
                    </div>
                    <label>Evening Sir. I would like to....</label>
                </div>
            </div>
        </div>
    </div>

    <div class="w-75 h-100 d-flex justify-content-center" style="border: 20px solid silver">
        <div class="d-flex d-none fw-bold flex-column top-50 justify-content-center align-items-center">
            <i class="fa fs-1 fa-inbox"></i>
            <label>Select a mail to read</label>
            <label>Nothing is selected</label>
        </div>
        <div class="w-100 p-3 d-flex flex-column gap-5">
            <div class="d-flex w-100 justify-content-between">
                <div class="d-flex gap-2 align-items-center">
                    <div class="fs-4 col-2 fw-bolder bg-success text-white d-flex justify-content-center align-items-center" style="border-radius: 100%; width: 1.7em; height: 1.5em">
                        GF
                    </div>
                    <div class="d-flex fw-bolder flex-column" style="line-height: 1em;">
                        <label>From: Greg Forrest</label>
                        <label>To: Lets Batter</label>
                    </div>
                </div>
                <div class="d-flex gap-4">
                    <i class="fa fa-reply"></i>
                    <i class="fa fa-share"></i>
                    <i class="fa fa-ellipsis-h"></i>
                </div>
            </div>
            <div>
                Request for quotation<br />

                Evening Sir. I would Like to purchase this product<br />

                <a href="">View Product</a>

            </div>
            <div class="d-flex gap-2">
                <a class="border-silver px-2 py-1" >
                    <i class="fa fa-reply"></i>
                    Reply
                </a>
                <a class="border-silver disabled px-2 py-1" >
                    <i class="fa fa-share"></i>
                    Forward
                </a>
                <div></div>
            </div>
        </div>
    </div>
</div>

